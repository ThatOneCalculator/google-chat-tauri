{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Google Chat",
    "version": "0.0.4"
  },
  "tauri": {
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "chat.google.com",
          "enableTauriAPI": true,
          "windows": ["main"]
        },
        {
          "domain": "mail.google.com",
          "enableTauriAPI": true,
          "windows": ["main"]
        }
      ]
    },
    "allowlist": {
      "all": false,
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "category": "Productivity",
      "identifier": "io.github.thatonecalculator.google-chat-tauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Google Chat",
        "width": 800,
        "height": 600,
        "label": "main"
      },
      {
        "width": 276,
        "height": 350,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "url": "splash.html",
        "label": "splashscreen"
      }
    ],
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/tray-icons/monochrome.png"
    }
  }
}
